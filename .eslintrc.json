{
  "env": {
    "browser": true,
    "es2021": true,
    "jquery": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "jquery"
  ],
  "globals": {
    "Alpine": "readonly",
    "$": "readonly",
    "jQuery": "readonly",
    "wp": "readonly",
    "ajaxurl": "readonly",
    "gfWcPriceCalc": "readonly",
    "gfWcDualSubmit": "readonly",
    "window": "readonly",
    "document": "readonly",
    "console": "readonly",
    "fetch": "readonly",
    "URLSearchParams": "readonly",
    "setTimeout": "readonly",
    "Date": "readonly",
    "Object": "readonly",
    "parseInt": "readonly",
    "parseFloat": "readonly",
    "Math": "readonly"
  },
  "rules": {
    "indent": ["error", 4, { "SwitchCase": 1 }],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn", {
      "vars": "all",
      "args": "after-used",
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_"
    }],
    "no-console": "off",
    "no-debugger": "warn",
    "no-undef": "error",
    "no-redeclare": "error",
    "no-unreachable": "error",
    "eqeqeq": ["warn", "always"],
    "curly": ["error", "all"],
    "brace-style": ["error", "1tbs"],
    "comma-dangle": ["error", "only-multiline"],
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "always"
    }],
    "jquery/no-ajax": "off",
    "jquery/no-animate": "off",
    "jquery/no-attr": "off",
    "jquery/no-class": "off",
    "jquery/no-each": "off",
    "jquery/no-fade": "off",
    "jquery/no-find": "off",
    "jquery/no-html": "off",
    "jquery/no-serialize": "off",
    "jquery/no-val": "off"
  }
}
